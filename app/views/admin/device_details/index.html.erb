<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <p id="notice" style="color:orange;"><%= notice %></p>
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">Listing Devices</h2>
      </div>
      <% if @devices.present? %>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Id</th>
              <th>Device Id</th>
              <th>Device Type</th>
              <th>Device Name</th>
              <th>Advertising Id</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @devices.each do |device| %>
              <tr>
                <td><%= device.id %></td>
                <td><%= device.device_id %></td>
                <td><%= device.device_type %></td>
                <td><%= device.device_name %></td>
                <td><%= device.advertising_id %></td>
                <td>
                  <%= link_to 'Show', admin_device_detail_path(device),class: 'btn btn-primary btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @devices %>
      <% else %>
        <h1 class="not-found">No Devices Found</h1>
      <% end %>
    </div>
  </div>
</div>
