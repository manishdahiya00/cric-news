<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <p id="notice" style="color:orange;"><%= notice %></p>
      <div class="col-lg-12 d-flex flex-row">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">Match Details</h2>
      </div>
      <% if @match.present? %>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Match ID</th>
              <th>Competition ID</th>
              <th>Title</th>
              <th>Status</th>
              <th>Short Title</th>
              <th>Match Type</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @match.mid %></td>
              <td><%= @match.cid %></td>
              <td><%= @match.title %></td>
              <td><%= @match.status %></td>
              <td><%= @match.short_title %></td>
              <td><%= @match.match_type %></td>
            </tr>
          </tbody>
        </table>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Team A Name</th>
              <th>Team A Logo</th>
              <th>Team B Name</th>
              <th>Team B Logo</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @match.teama_name %></td>
              <td><img style="width:20px;" src="<%= @match.teama_logo %>" alt="Team A Logo" onerror="this.onerror=null;this.src='https://via.placeholder.com/20';" /></td>
              <td><%= @match.teamb_name %></td>
              <td><img style="width:20px;" src="<%= @match.teamb_logo %>" alt="Team B Logo" onerror="this.onerror=null;this.src='https://via.placeholder.com/20';" /></td>
            </tr>
          </tbody>
        </table>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Venue Name</th>
              <th>Venue Location</th>
              <th>Venue Country</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @match.venue_name %></td>
              <td><%= @match.venue_location %></td>
              <td><%= @match.venue_country %></td>
            </tr>
          </tbody>
        </table>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Team A Scores (Full)</th>
              <th>Team A Scores</th>
              <th>Team A Overs</th>
              <th>Team B Scores (Full)</th>
              <th>Team B Scores</th>
              <th>Team B Overs</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @match.teama_scores_full %></td>
              <td><%= @match.teama_scores %></td>
              <td><%= @match.teama_overs %></td>
              <td><%= @match.teamb_scores_full %></td>
              <td><%= @match.teamb_scores %></td>
              <td><%= @match.teamb_overs %></td>
            </tr>
          </tbody>
        </table>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Match Time</th>
              <th>Match End Time</th>
              <th>Created At</th>
              <th>Updated At</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @match.match_time %></td>
              <td><%= @match.match_end_time %></td>
              <td><%= @match.created_at.strftime("%d/%m/%y %I:%M %p") %></td>
              <td><%= @match.updated_at.strftime("%d/%m/%y %I:%M %p") %></td>
            </tr>
          </tbody>
        </table>
      <% else %>
        <h1 class="not-found">Match Not Found</h1>
      <% end %>
    </div>
  </div>
</div>
